          <h2 class="text-center mb-4">MY PROJECT</h2>
          <div id="content" class="row"></div>
                <div class="row">
        {{#if blogData.length}}
          {{#each blogData}}
<div class="col-md-4  ">
      <div class="card mb-3 shadow">
        <div class="card-body">
          <img src="{{this.image}}" alt="image upload" class="img-thumbnail" />
          <h5 class="card-title"><a href="/detail-projek/{{@index}}" target="_blank" rel="noopener noreferrer">{{this.title}} </a>- {{this.startYear}}</h5>
          <p class="card-text">{{this.content}}</p>
          <p class="card-text">Durasi: {{this.durationDays}}</p>
          <div class="card-text">
                      <div class="card-text">
            {{#if this.technologies.nodeJS}}
              <i class="fa-brands fa-node-js"></i>
            {{/if}}
            {{#if this.technologies.reactJS}}
              <i class="fa-brands fa-react"></i>
            {{/if}}
            {{#if this.technologies.nextJS}}
              <i class="fa-brands fa-js"></i>
            {{/if}}
            {{#if this.technologies.typeScript}}
              <i class="fa-brands fa-vuejs"></i>
            {{/if}}
          </div>
</div>
          <a href="#" class="btn btn-primary me-2">Edit</a>
          <button class="btn btn-danger" onclick="deleteProject({{this.id}})">Hapus</button>
        </div>
      </div>
    </div>
          {{/each}}
        {{else}}
          <p class="text-center">Tidak ada data yang tersedia.</p>
        {{/if}}
      </div>
        </div>
        
      
    </div>

